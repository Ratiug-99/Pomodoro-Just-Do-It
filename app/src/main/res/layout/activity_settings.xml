<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <TextView
        android:id="@+id/tv_minutes_concentrate_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="@string/minutes_concentrate_timer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="25dp"/>
    <TextView
        android:id="@+id/tv_minutes_rest_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="@string/minutes_rest_timer"
        app:layout_constraintTop_toBottomOf="@id/tv_minutes_concentrate_timer"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="25dp"/>

    <EditText
        android:id="@+id/et_minutes_concentrate_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/tv_minutes_concentrate_timer"
        app:layout_constraintBottom_toBottomOf="@id/tv_minutes_concentrate_timer"
        app:layout_constraintTop_toTopOf="@id/tv_minutes_concentrate_timer"
        android:layout_marginStart="50dp"
        android:text="@string/_25"/>

    <EditText
        android:id="@+id/et_minutes_rest_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/tv_minutes_concentrate_timer"
        app:layout_constraintBottom_toBottomOf="@id/tv_minutes_rest_timer"
        app:layout_constraintTop_toTopOf="@id/tv_minutes_rest_timer"
        android:layout_marginStart="50dp"
        android:text="@string/_5"/>


</androidx.constraintlayout.widget.ConstraintLayout>